{% extends 'base.html.twig' %}

{% block title %}
    Episódios da temporáda {{ season.number }} da Série {{ series.name }}
{% endblock %}

{% block body %}
<form method="post">
    <ul class="list-group">
        {% for episode in episodes %}
            <li class="list-group-item d-flex justify-content-between">
                Episode {{ episode.number }} 
                <input type="checkbox" name="episodes[{{ episode.id }}]"
                   {% if episode.watched %}  checked {% endif %}
                 >
            </li>
        {% endfor %}
    </ul>
    
    <button class="btn btn-primary mt-2">
        Salvar
    </button>
{% endblock %}
